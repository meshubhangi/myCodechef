#include <stdio.h>
 
int main(void)
{
    int n, a=0, b=0, c=0, d=0,i,p1,p2;
    scanf("%d", &n);
    for(i=0; i<n; i++)
    {
     scanf("%d %d", &p1, &p2);
     a=a+p1;
     b=b+p2;
     if(a-b>d)
     {
        d=a-b;
        c=1;
     }
     else if(b-a>d)
     {
       d=b-a;
       c=2;
     }              
    }
    printf("%d %d",c,d);
	return 0;
}
 